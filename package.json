{
  "name": "@devotel/devhub",
  "version": "0.0.2",
  "description": "Node.js SDK for DevHub Communication API",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:package",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:package": "echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:modules": "npm run test:esm && npm run test:cjs",
    "test:esm": "node tests/module-compatibility.test.js",
    "test:cjs": "node tests/module-compatibility.cjs",
    "validate:build": "node scripts/validate-build.cjs",
    "prepublishOnly": "npm run clean && npm run build && npm run validate:build && npm run test:modules"
  },
  "keywords": [
    "devhub",
    "devotel",
    "communication",
    "api",
    "sdk",
    "sms",
    "email",
    "whatsapp"
  ],
  "author": "DevHub Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "axios-mock-adapter": "^1.22.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ]
}
